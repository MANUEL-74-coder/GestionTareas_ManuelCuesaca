@model GestionTareas.MVC.Models.Usuario

<h2>Eliminar Usuario</h2>
<h4>¿Estás seguro que deseas eliminar el usuario "@Model.NombreUsuario"?</h4>
<form method="post" asp-action="Eliminar" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>