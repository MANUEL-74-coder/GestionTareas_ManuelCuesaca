@model GestionTareas.MVC.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Register";
}

<h2>Registro de Usuario</h2>
<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NombreUsuario"></label>
        <input asp-for="NombreUsuario" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContrasenaHash"></label>
        <input asp-for="ContrasenaHash" type="password" class="form-control" />
        <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
    <a asp-action="Login" class="btn btn-link">Volver al login</a>
</form>