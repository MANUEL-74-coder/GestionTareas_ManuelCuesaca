@model GestionTareas.MVC.Models.Usuario

<h2>Registro de Usuario</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label>Nombre de usuario</label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="ContrasenaHash" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-success">Registrarse</button>
</form>

<div class="mt-3">
    <a href="@Url.Action("Login", "Usuario")" class="btn btn-secondary">Volver al login</a>
</div>
}
