@model GestionTareas.MVC.Models.Tarea

<h2>Nueva Tarea</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Título</label>
        <input asp-for="Titulo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control">
            <option>Pendiente</option>
            <option>En Progreso</option>
            <option>Completada</option>
        </select>
    </div>
    <div class="form-group">
        <label>Prioridad</label>
        <select asp-for="Prioridad" class="form-control">
            <option>Baja</option>
            <option>Media</option>
            <option>Alta</option>
        </select>
    </div>
    <div class="form-group">
        <label>Fecha de Vencimiento</label>
        <input asp-for="FechaVencimiento" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Proyecto Id</label>
        <input asp-for="ProyectoId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Usuario Asignado Id</label>
        <input asp-for="UsuarioAsignadoId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>